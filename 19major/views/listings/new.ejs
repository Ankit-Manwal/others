<% layout("/layouts/boilerplate") -%>

  <body>
    <div  class="row mt-3">     <!--mt-3 margin from top-->
        <div class="col-8 offset-2">    <!--  form centre and 8 col utilized out of 12 -->
          <br></br>
          <h3 >Create a New Listing</h3>

          <form method="POST" action="/listings" novalidate  class="needs-validation">

              <div class="mb-3">  <!-- class=mb-3 gaps--->
                <label for="title" class="form-label">title</label>
                <input name="listing[title]" class="form-control" placeholder="enter title" type="text" required />
                <!-- feedback if right or wrong input -->
                 <div class="valid-feedback">title look good</div>
                 <div class="invalid-feedback">enter title</div>
              </div>


              <div class="mb-3">
                <label for="description" class="form-label">description</label>
                <textarea name="listing[description]" class="form-control" placeholder="enter description" required></textarea>
                <!-- feedback if right or wrong input -->
                <div class="valid-feedback">description look good</div>
                <div class="invalid-feedback">enter description</div>
              </div>

              <div class="mb-3">
                <label for="image" class="form-label">image url</label>
                <input name="listing[image][url]" class="form-control" placeholder="enter image URL/Link" type="text" />
                <!-- feedback if right or wrong input
                <div class="valid-feedback">image look good</div>
                <div class="invalid-feedback">enter image</div> -->
              </div>

              <div class="row">  <!-- price and country in one line -->
                  <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">price</label>
                    <input name="listing[price]" class="form-control" placeholder="enter price" type="number" required/>
                    <!--   -->
                    <!-- feedback if right or wrong input -->
                    <div class="valid-feedback">price look good</div>
                    <div class="invalid-feedback">enter price</div>
                  </div>
                  
                  <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">country</label>
                    <input name="listing[country]" class="form-control" placeholder="enter country" type="text" required />
                    <!-- feedback if right or wrong input -->
                    <div class="valid-feedback">country alright</div>
                    <div class="invalid-feedback">enter country</div>
                  </div>
              </div>

              <div class="mb-3">
                <label for="location" class="form-label">location</label>
                <input name="listing[location]" class="form-control"  placeholder="enter location" type="text" required />
                <!-- feedback if right or wrong input -->
                <div class="valid-feedback">location look good</div>
                <div class="invalid-feedback">enter location</div>
              </div>

              <button class="btn btn-dark addbutton mt-3">Add</button>
            </form>
         </div>
    </div>
  </body>