<% layout("/layouts/boilerplate") -%>

  <body>
    <div  class="row mt-3">     <!--mt-3 margin from top-->
        <div class="col-8 offset-2">    <!--  form centre and 8 col utilized out of 12 -->
          <br></br>
          <h1 >SignUp For Wanderlust</h1>

          <form method="POST" action="/signup" novalidate  class="needs-validation">

              <div class="mb-3">  <!-- class=mb-3 gaps--->
                <label for="username" class="form-label">username</label>
                <input name="username" id="username" class="form-control" placeholder="enter username" type="text" required />
                <!-- feedback if right or wrong input -->
                 <div class="valid-feedback">username look good</div>
                 <div class="invalid-feedback">enter username</div>
              </div>

              <div class="mb-3">  <!-- class=mb-3 gaps--->
                <label for="email" class="form-label">email</label>
                <input name="email" id="email" class="form-control" placeholder="enter email" type="text" required />
                <!-- feedback if right or wrong input -->
                 <div class="valid-feedback">email look good</div>
                 <div class="invalid-feedback">enter email</div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" id="password" class="form-control"  placeholder="enter password" type="password" required />
                <!-- feedback if right or wrong input -->
                <div class="valid-feedback">password look good</div>
                <div class="invalid-feedback">enter password</div>
              </div>

              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Re-enter Password</label>
                <input name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Re-enter password" type="password" required />
                <!-- feedback if right or wrong input -->
                <div class="valid-feedback">Passwords match</div>
                <div class="invalid-feedback">Passwords do not match</div>
              </div>

              <button class="btn btn-success mt-3 mb-3">SignUp</button>
              <a class="btn btn-danger mt-3 offset-1 mb-3" href="/login">Login</a>
            </form>
         </div>
    </div>
  </body>