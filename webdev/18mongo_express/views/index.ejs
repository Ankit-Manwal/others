<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini WhatsApp</title>

    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>

    <!-- new chat -->
    <form action="/chats/new" method="GET">
        <button>new chat</button>
    </form>
    <br/>
    

    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div class="message">
                <p><%= chat.message %></p>
                
                <!-- edit chat-->
                <form method="GET"  action="/chats/<%=chat._id %>/edit">
                    <button>edit</button>
                </form>

                 <!-- delete chat-->
                 <form   method="POST"  action="/chats/<%= chat._id %>?_method=DELETE" >
                    <button>delete</button>
                </form>
                
            </div>
            <p>Received by: <i><%= chat.to %></i></p>
            <hr />
            <!-- time -->
            <p> <%= chat.created_at.toString().split(" ") [4] %> <br /> </p>  
            <!-- date  -->
            <p><%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %> <br /></p>
        </div>
        <br/>
        <br/>
    <% } %>
</body>
</html>

